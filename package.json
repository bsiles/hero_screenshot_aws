{
  "name": "website-screenshot-agent",
  "version": "1.0.0",
  "description": "A tool to capture website screenshots and upload them to S3",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "screenshot-agent": "./dist/index.js"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
